button {
    background: none;
    color: #ffa260;
    border: 2px solid;
    padding: 1em 2em;
    font-size: 1em;
    transition: all 0.3s;
}

button:hover {
    border-color: #f1f55c;
    color: white;
    box-shadow: 0px 0.5em 0.5em -0.4em #f1f55c;
    transform: translateY(-0.25em);
    cursor: crosshair;
}
